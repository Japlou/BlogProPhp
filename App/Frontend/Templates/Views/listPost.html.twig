{% extends "layout.html.twig" %}

{% block title %}NEFISE Magalie - Mon blog professionnel{% endblock %}

{% block content %}

  <body id="page-top" data-psy="scroll" data-target=".navbar">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand" href="Web/Assets/curriculum-vitae/CV_nefise_magalie.pdf">Curriculum Vitae</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
          	<li class="nav-item">
              <a class="nav-link" href="/">Acceuil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="create">Créer un Article</a>
            </li>
            <li class="nav-item" href="#page-top">
              <a class="nav-link" href="../#contact" >Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('Web/Assets/img/formation_bg.png')">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h2>LISTE DES ARTICLES</h2>
              <span class="subheading">Ici ce trouve la liste des articles publiers</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          {% for post in list %}
          <div class="post-preview">
            <a href="show-{{post.id}}">
              <h2 class="post-title">
                {{ post.titre }}
              </h2>
              <h3 class="post-subtitle">
                {{ post.chapo }}
              </h3>              
            </a>
            <p class="post-meta">Posté par
              <a href="#">{{ post.auteur }}</a>
              le {{ post.dateCreation }} (dernière modification le {{ post.dateModification }})</p>
          </div>
          <hr>
          {% endfor %}
        </div>
      </div>
    </div>
{% endblock %}
    